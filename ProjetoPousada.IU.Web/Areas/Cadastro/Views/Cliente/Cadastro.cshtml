@model ProjetoPousada.IU.Web.Areas.Cadastro.ViewModels.Cliente.CadastroViewModel

@{
    Layout = "_Template";
}

@using (@Html.BeginForm("Cadastrar", "Cliente", new { Area = "Cadastro" }, FormMethod.Post))
{

    <div class="row">

        <div class="col-lg-10">
            <h2>Cadastro de Clientes</h2>
        </div>
        <br />
        <br />
        <br />
        <br />
        <div class="col-md-5">
            <label>Nome</label>
            @Html.TextBoxFor(p => p.Cliente.Nome,new {@class = "form-control",required = "required",maxlength = "400",placeholder = "Nome"})
        </div>
        <div class="col-md-4">
            <div id="divAlertaCPF"></div>
            <label>CPF</label>
            @Html.TextBoxFor(p => p.Cliente.CPF,new {@class = "form-control",required = "required",maxlength = "11",placeholder = "CPF"})
        </div>
        <div class="col-md-3">
            <label>Data de Nascimento</label>
            @Html.TextBoxFor(p => p.Cliente.DtNascimento,new {@class = "form-control",required = "required",maxlength = "400",placeholder = "Data de Nascimento", type="date"})
        </div>

    </div>

    <br />

    <div class="row">

        <div class="col-md-3">
            <label>Sexo</label>
            @Html.DropDownListFor(p => p.Cliente.IdSexo, Model.Sexos, " --- Selecione o Sexo --- ", new { @class = "form-control"})
        </div>

        <div class="col-md-2">
            <button class="btn btn-success" id="btnCadastrar">
                <i class="align-middle me-2" data-feather="search"></i>
                Cadastrar
            </button>
        </div>

    </div>
}
