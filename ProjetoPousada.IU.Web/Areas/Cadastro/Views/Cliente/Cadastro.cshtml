@model ProjetoPousada.IU.Web.Areas.Cadastro.ViewModels.Cliente.CadastroViewModel

@{
    Layout = "_Template";
}

@using (@Html.BeginForm("Cadastro", "Cliente", new { area = "Cadastro" }, FormMethod.Post, true, new { id = "frmCadastro" }))
{
    <div class="row">

        <div class="col-lg-10">
            <h2>Cadastro de Clientes</h2>
        </div>

        <br />
        <br />
        <br />
        <br />

        <div class="col-md-3">
            <div id="divAlertaCPF"></div>
            <label>CPF:<span class="text-danger">*</span></label>
            @Html.TextBoxFor(p => p.Cliente.CPF,new {@class = "form-control",required = "required",maxlength = "11",placeholder = "CPF",minlength = "11"})
        </div>
        <div class="col-md-2" id="divBtnPesquisar">
            <button class="btn btn-success" style="margin-top: 31px;" id="btnPesquisar" type="button">
                <i class="align-middle me-2" data-feather="search"></i>
                Pesquisar
            </button>
        </div>
    </div>

    <br />

    <div class="row">
        <div class="col-md-4">
            <label>Nome:<span class="text-danger">*</span></label>
            @Html.TextBoxFor(p => p.Cliente.Nome,new {@class = "form-control readonly",required = "required",maxlength = "400",placeholder = "Nome"})
        </div>
        <div class="col-md-3">
            <label>Data de Nascimento:<span class="text-danger">*</span></label>
            @Html.TextBoxFor(p => p.Cliente.DtNascimento,new {@class = "form-control readonly",required = "required",placeholder = "Data de Nascimento", type="date"})
        </div>
        <div class="col-md-3">
            <label>Sexo:<span class="text-danger">*</span></label>
            @Html.DropDownListFor(p => p.Cliente.IdSexo, Model.Sexos, " --- Selecione o Sexo --- ", new { @class = "form-control readonly"})
        </div>
    </div>

    <br />

    <div class="row">
        <div class="col-md-4">
            <label>RG:</label>
            @Html.TextBoxFor(p => p.Cliente.Rg, new { @class = "form-control readonly"})
        </div>
        <div class="col-md-2" style="display:none;" id="divBtnCadastrar">
            <button class="btn btn-success" style="margin-top: 31px;" id="btnCadastrar">
                <i class="align-middle me-2" data-feather="search"></i>
                Cadastrar
            </button>
        </div>
    </div>

    @section JS
    {
    <script src="~/assets/js/custom/utils/formatacaocpf.js"></script>
    <script src="~/assets/js/custom/utils/validacaocpf.js"></script>
    <script src="~/assets/js/jquerymask/jquery.mask.min.js"></script>
    <script src="~/assets/js/custom/cadastro/cadastro/cadastro.js"></script>
    }

}
